#!/usr/bin/env bash

# Header guard
[[ -z "${GLOBAL_EZ_INSTALL_RC_INCLUDED+x}" ]] \
  && readonly GLOBAL_EZ_INSTALL_RC_INCLUDED=1 \
  || return 0

SKIP_CONFIRM=false
VERBOSE=false
DEBUG=false
LOG_DEBUG_LEVEL=3
EZ_INSTALL_HOME="$(realpath -s ${BASH_SOURCE%/*})"
PACKAGE_ROOT_DIR="$(realpath -s "${BASH_SOURCE%/*}/generate/packages")"
LOCAL_PACKAGE_ROOT_DIR="${HOME}/.ez-install.d/packages"
