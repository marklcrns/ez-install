#!/usr/bin/env bash

set -o pipefail
set -o nounset

source "${BASH_SOURCE%/*}/common.sh"

SCRIPT_DIR="${BASH_SOURCE%/*}"

_main() {
  local -a essentials=(
    "build-essential"
    "libssl-dev"
    "libffi-dev"
    "cmake"
    "curl"
    "wget"
    "zip"
    "unzip"
    "unar"
    "git"
    "-d git -P 'git lfs install' -- git-lfs"
    "gnupg2"
    "net-tools"
  )

  local -a package_manager=(
    "-m npm browser-sync"
    "-m npm gulp-cli"
  )

  local -a packages=(
    "${essentials[@]}"
    "${package_manager[@]}"
  )

  for package in "${packages[@]}"; do
    ${SCRIPT_DIR}/generate-template -y "${package}"
  done
}

_main
